{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "noEmit": true,
    "lib": ["esnext", "dom", "scripthost"]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "build"]
}
